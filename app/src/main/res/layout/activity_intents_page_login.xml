<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IntentsPageLogin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrez votre Login et mot de pass :"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/LoginI"
        android:hint="Entez votre login"
        android:textColorHint="#000"
        android:background="@color/GreySmoke"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:textColor="@color/black"
        android:hint="Entez votre password"
        android:layout_height="wrap_content"
        android:id="@+id/passwordI"
        android:textColorHint="#000"
        android:background="@color/GreySmoke"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connecter"
        android:onClick="OnclickH"
        android:id="@+id/btnConnecter"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="80px"
        android:layout_gravity="center"
        android:id="@+id/result"
        android:gravity="center"
        android:background="@color/GreySmoke"/>
</LinearLayout>